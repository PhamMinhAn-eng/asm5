@model List<ASM5.Models.Order>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "_LayoutCustomer";
}

<h1 class="page-title">Lịch sử đơn hàng</h1>

@if (Model.Count == 0)
{
    <p class="no-orders-message">Bạn chưa có đơn hàng nào.</p>
}
else
{
    <table class="order-table">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-details">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<style>
    /* Trang tiêu đề */
    .page-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
    }

    /* Thông báo khi không có đơn hàng */
    .no-orders-message {
        font-size: 1.2rem;
        color: #777;
        text-align: center;
    }

    /* Cải thiện giao diện bảng */
    .order-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .order-table th,
    .order-table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .order-table th {
        background-color: #007bff;
        color: white;
        font-size: 1.1rem;
    }

    .order-table tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .order-table tr:hover {
        background-color: #f1f1f1;
    }

    /* Nút chi tiết */
    .btn-details {
        display: inline-block;
        padding: 8px 16px;
        background-color: #28a745;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

    .btn-details:hover {
        background-color: #218838;
    }
</style>
